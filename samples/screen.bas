loop:	WAIT
	CLS
	MODE SCREEN_COLOR_STACK,STACK_BLACK,STACK_BLUE,STACK_RED,STACK_TAN	' Set color-stack mode
	WAIT
	PRINT AT SCREENPOS(0, 0) COLOR CS_WHITE,"HELLO COLOR-STACK"
	PRINT AT SCREENPOS(0, 1) COLOR SPR_WHITE + CS_ADVANCE,"H"
	PRINT COLOR CS_WHITE,"ELLO"
	PRINT AT 40 COLOR CS_WHITE + CS_ADVANCE,"H"
	PRINT COLOR CS_WHITE,"ELLO"
	PRINT AT 60 COLOR CS_WHITE + CS_ADVANCE,"H"
	PRINT COLOR CS_WHITE,"ELLO"

	PRINT AT SCREENPOS(0, 5) COLOR CS_WHITE + $0200,"HELLO FOREGROUND"
	PRINT AT SCREENPOS(0, 6) COLOR CS_WHITE + $0400,"HELLO"
	PRINT AT SCREENPOS(0, 7) COLOR CS_PURPLE,"HELLO"
	PRINT AT SCREENPOS(0, 8) COLOR CS_WHITE + CS_ADVANCE,"HELLO"
	FOR c = 1 to 60
	WAIT
	NEXT c
	MODE SCREEN_FOREGROUND_BACKGROUND		' Set foreground/background mode
	FOR c = 1 to 60
	WAIT
	NEXT c

	SCREEN my_screen	' Copy a full screen
